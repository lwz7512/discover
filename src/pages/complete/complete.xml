<canvas class="third-canvas" canvas-id="thirdCanvas"></canvas>

<view class="switch-imgbtn" bindtap="switchImgs">
  <image src="../../images/img-dn-icon.png" wx:if="{{btnSelected}}" />
  <image src="../../images/img-up-icon.png" wx:else />
</view>

<view class="bglist" wx:if="{{btnSelected}}">
  <image src="../../images/icn-bg-0.png" bindtap="changeBG" data-index="0"/>
  <image src="../../images/icn-bg-1.png" bindtap="changeBG" data-index="1"/>
  <image src="../../images/icn-bg-2.png" bindtap="changeBG" data-index="2"/>
  <image src="../../images/icn-bg-3.png" bindtap="changeBG" data-index="3"/>
</view>

